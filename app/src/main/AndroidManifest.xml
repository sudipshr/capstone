<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="localeconnect.me.localeconnect">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".LocaleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="Locale Connect">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".event.CreateEventActivity"
            android:label="@string/title_activity_create_event"
            android:parentActivityName=".LoginActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="localeconnect.me.localeconnect.LoginActivity" />
        </activity>
        <activity android:name=".event.EventListActivity"
            android:label="@string/title_activity_list_event"
            android:parentActivityName=".event.CreateEventActivity"
            android:theme="@style/AppTheme"
            >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="localeconnect.me.localeconnect.event.CreateEventActivity" />
        </activity>
        <activity
            android:name=".swiper.SwipeViewActivity"
            android:label="@string/title_activity_swipe_view"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="localeconnect.me.localeconnect.LoginActivity" />
        </activity>

        <activity
            android:name=".profile.PreferenceActivity"
            android:label="@string/title_activity_preference"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="localeconnect.me.localeconnect.LoginActivity" />
        </activity>
        <activity
            android:name=".profile.IDScanActivity"
            android:label="@string/title_activity_preference"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="localeconnect.me.localeconnect.LoginActivity" />
        </activity>

    </application>

</manifest>